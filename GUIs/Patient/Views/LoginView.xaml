<UserControl x:Class="RemoteHealthcare.GUIs.Patient.Views.LoginView"
             x:Name="Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

             mc:Ignorable="d"
             Background="IndianRed">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="1" Height="150" VerticalAlignment="Bottom">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Images/fiets.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Fill="Black" />
        <UserControl Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Height="250" Width="400" Background="White">
            <StackPanel>
                <TextBlock Text="Welkom Patient!" FontSize="18" TextAlignment="Center" />
                <Label Content="Login ID" HorizontalAlignment="Center" />
                <TextBox Name="LoginIdBox" Margin="10,0,10,0" Text="{Binding Username}" />
                <Label Content="Wachtwoord" HorizontalAlignment="Center" />
                <PasswordBox Name="PasswordBox" Margin="10,0,10,0" PasswordChanged="PasswordBox_OnPasswordChanged" />
                <Label Content="Fiets id" HorizontalAlignment="Center" />
                <TextBox Name="FietsIdBox" Margin="10,0,10,0" Text="{Binding BikeId}" />
                <Label Content="VR id" HorizontalAlignment="Center" />
                <TextBox Name="VrIdBox" Margin="10,0,10,0" Text="{Binding VrId}" />
                <Button Margin="10,20,10,30" Content="Log in!" Command="{Binding Path=LogIn}" />
            </StackPanel>
        </UserControl>
    </Grid>
</UserControl>