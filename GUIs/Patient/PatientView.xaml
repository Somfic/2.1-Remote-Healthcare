        <Button Content="Button" Command="{Binding Send}" HorizontalAlignment="Left" Margin="738,404,0,0" VerticalAlignment="Top"/>
        <Label Content="Snelheid" HorizontalAlignment="Left" Margin="135,46,0,0" VerticalAlignment="Top" Width="63"/>
        <Label Content="Hartslag" HorizontalAlignment="Left" Margin="235,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Afstand" HorizontalAlignment="Left" Margin="334,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Tijd" HorizontalAlignment="Left" Margin="440,46,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="122,72,0,0" VerticalAlignment="Top" Width="379" Source="/Images/logos.JPG"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="148,154,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="243,154,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="340,154,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="436,154,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="50" Margin="122,262,0,0" VerticalAlignment="Top" Width="228"/>

    </Grid>

</Window>
