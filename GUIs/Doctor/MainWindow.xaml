<Window x:Class="RemoteHealthcare.GUIs.Doctor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteHealthcare.GUIs.Doctor"
        xmlns:views="clr-namespace:RemoteHealthcare.GUIs.Doctor.Views"
        xmlns:viewModels="clr-namespace:RemoteHealthcare.GUIs.Doctor.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow-xcvxc" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            
            <DataTemplate DataType="{x:Type viewModels:DoctorViewModel}">
                <views:DoctorView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:LoginWindowViewModel}">
                <views:LoginView/>
            </DataTemplate>
            
        </Grid.Resources>

        <ContentControl Content="{Binding Path=CurrentViewModel}"/>
    </Grid>
</Window>